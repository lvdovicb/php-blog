                <input id="name" name="title" placeholder="Title" type="text" class="form-control here">
            </div>
        </div>
        <div class="form-group row">
            <label for="content" class="col-4 col-form-label">Content</label>
            <div class="col-8">
                <textarea id="content" name="content" type="textarea" class="form-control here">      
                </textarea>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="offset-4 col-8">
                <button name="submit" type="submit" class="btn btn-primary">Publish</button>
            </div>
        </div>
    </form>

